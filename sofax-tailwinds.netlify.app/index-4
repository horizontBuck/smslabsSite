    <!-- Main js -->
    <script src="assets/js/main.js"></script>
    <script>
      const shapes = document.querySelectorAll(".shape");

      // Track mouse position
      let mouseX = 0,
        mouseY = 0;
      window.addEventListener("mousemove", (e) => {
        mouseX = e.clientX / window.innerWidth - 0.5; // Normalize to range [-0.5, 0.5]
        mouseY = e.clientY / window.innerHeight - 0.5; // Normalize to range [-0.5, 0.5]

        // Move each shape differently
        shapes.forEach((shape, index) => {
          const offsetX = (index + 1) * 20; // Horizontal offset multiplier
          const offsetY = (index + 1) * 10; // Vertical offset multiplier
          const rotation = (index + 1) * 1; // Rotation multiplier

          gsap.to(shape, {
            x: mouseX * offsetX,
            y: mouseY * offsetY,
            rotation: mouseX * rotation,
            duration: 1,
            ease: "power2.out",
          });
        });
      });
    </script>
